# API ключи Aspro.Cloud
# Получите API ключ в настройках вашего аккаунта Aspro.Cloud
ASPRO_API_KEY=your_api_key_here

# Идентификатор компании в Aspro.Cloud (поддомен)
ASPRO_COMPANY=your_company_name

# Пользователь для упоминаний в комментариях CRM
# ID пользователя в CRM (см. профиль пользователя)
USERID=12345
# Отображаемое имя пользователя
USER_NAME=Иван Иванов

# Опционально: фиксированный ID календаря Aspro для событий заседаний
ASPRO_EVENT_CALENDAR_ID=49

# Пути и логирование (опционально)
DOCUMENTS_DIR=/abs/path/to/KadBot/documents
LOG_LEVEL=INFO  # DEBUG/INFO/WARNING/ERROR

# Параметры браузера (опционально)
BROWSER_TIMEOUT=30
BROWSER_RETRIES=3

# База данных (опционально)
DATABASE_URL=sqlite:///kad_cases.db
